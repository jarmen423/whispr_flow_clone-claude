{
  "name": "localflow",
  "version": "1.0.0",
  "description": "Hybrid cloud/local dictation system with real-time processing",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "NODE_ENV=production bun .next/standalone/server.js",
    "lint": "next lint",
    "websocket:dev": "bun run mini-services/websocket-service/index.ts",
    "agent:start": "cd agent && python localflow-agent.py",
    "dev:all": "concurrently \"bun run websocket:dev\" \"bun run dev\""
  },
  "dependencies": {
    "next": "^15.1.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "framer-motion": "^11.15.0",
    "sonner": "^1.7.1",
    "z-ai-web-dev-sdk": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "lucide-react": "^0.468.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "typescript": "^5.7.3",
    "tailwindcss": "^4.0.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.4",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-switch": "^1.1.3",
    "concurrently": "^9.1.2"
  }
}
